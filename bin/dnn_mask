#! /usr/bin/env python

"""
Extract DNN activation for layer, channel, row and column of interest
"""

import argparse
import numpy as np

from dnnbrain.dnn.core import Mask, Activation


def main():
    parser = argparse.ArgumentParser(description=__doc__)
    parser.add_argument('-act',
                        metavar='Activation',
                        required=True,
                        type=str,
                        help='DNN activation file')
    parser.add_argument('-layer',
                        metavar='Layer',
                        type=str,
                        nargs='+',
                        help="names of the layers used to specify where activation is extracted from "
                             "For example, 'conv1' represents the first convolution layer, and "
                             "'fc1' represents the first full connection layer. ")
    parser.add_argument('-chn',
                        metavar='Channel',
                        type=int,
                        nargs='+',
                        help="Channel numbers used to specify where activation is extracted from "
                             "Default is extracting all channels of each layer specified by -layer.")
    parser.add_argument('-row',
                        metavar='Row',
                        type=int,
                        nargs='+',
                        help="Row numbers used to specify where activation is extracted from "
                             "Default is extracting all rows of each layer specified by -layer.")
    parser.add_argument('-col',
                        metavar='Column',
                        type=int,
                        nargs='+',
                        help="Column numbers used to specify where activation is extracted from "
                             "Default is extracting all columns of each layer specified by -layer.")
    parser.add_argument('-dmask',
                        metavar='DnnMask',
                        type=str,
                        help='a .dmask.csv file in which layers of interest are listed '
                             'with their own channels, rows and columns of interest.')
    parser.add_argument('-out',
                        metavar='Output',
                        required=True,
                        type=str,
                        help='an output filename with suffix .act.h5')
    args = parser.parse_args()
    assert np.logical_xor(args.layer is None, args.dmask is None), \
        'Use one and only one of the -layer and -dmask!'

    # extract dnn activation with mask
    dmask = Mask()
    if args.layer is not None:
        for layer in args.layer:
            dmask.set(layer, args.chn, args.row, args.col)
    else:
        dmask.load(args.dmask)

    activation = Activation(args.act, dmask)
    activation.save(args.out)


if __name__ == '__main__':
    main()
