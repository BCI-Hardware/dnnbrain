#! /usr/bin/env python

"""
Extract DNN activation for layer, channel, and column of interest which are 
specificed by a dnn mask
"""

import argparse


def main():
    parser = argparse.ArgumentParser(description='Extract DNN activation for '
                                     'layer, channel, and column of interest '
                                     ' which are specificed by a dnn mask.')
    parser.add_argument('-act',
                        metavar='Activation .act.hd5 file',
                        required=True,
                        type=str,
                        help='DNN activation .act.hd5 file')
    parser.add_argument('-dmask',
                        metavar='DnnMask to provided layer, channel '
                        'and column of interest',
                        required=True,
                        type=str,
                        help='a .dmask.csv file in which  interest of ' 
                        ' layers, channel and column are listed')
    parser.add_argument('-out',
                        metavar='Output .act.hd5 file',
                        required=True,
                        type=str,
                        help='an output filename with suffix .act.h5')
    args = parser.parse_args()


if __name__ == '__main__':
    main()
