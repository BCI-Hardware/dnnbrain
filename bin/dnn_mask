#! /usr/bin/env python

"""
Extract DNN activation within mask
"""

import argparse


def main():
    parser = argparse.ArgumentParser(description='Extract DNN activation within mask')
    parser.add_argument('-act',
                        metavar='Activation',
                        required=True,
                        type=str,
                        help='DNN activation file')
    parser.add_argument('-dmask',
                        metavar='DnnMask',
                        required=True,
                        type=str,
                        help='a .dmask.csv file in which layers of interest are listed '
                             'with their own channels or columns of interest')
    parser.add_argument('-out',
                        metavar='Output',
                        required=True,
                        type=str,
                        help='an output filename with suffix .act.h5')
    args = parser.parse_args()


if __name__ == '__main__':
    main()
