#! /usr/bin/env python

"""
minimal stimulus
"""

import argparse


def main():
    parser = argparse.ArgumentParser(description='minimal stimulus')
    parser.add_argument('-net',
                        metavar='Net',
                        required=True,
                        type=str,
                        help='a neural network name')
    parser.add_argument('-dmask',
                        metavar='DnnMask',
                        required=True,
                        type=str,
                        help='a .dmask.csv file in which layers of interest are listed '
                             'with their own channels or columns of interest')
    parser.add_argument('-pic',
                        metavar='Picture',
                        required=True,
                        type=str,
                        help='a picture')
    parser.add_argument('-out',
                        metavar='Output',
                        required=True,
                        type=str,
                        help='a picture')
    args = parser.parse_args()


if __name__ == '__main__':
    main()
